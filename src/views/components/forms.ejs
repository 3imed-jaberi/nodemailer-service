  <div class="container">
    <div class="row">
      <div class="col-md-8 mx-auto">
        <div class="card card-body bg-light mt-5">
            <div class="container">
                <a href="/" class="btn btn-success" ><i class="fa fa-retweet" style="font-size:15px;"></i></a>
            <div> 
              <br/>
          <% if (!result) { %> 
            <div id="err" class="alert alert-danger" role="alert">
                <h4> They are some error in your input mails or password .. </h4>
                <hr/>
                <div class="alert alert-primary" role="alert">
                <h6> please make sure your data is correct ... </h6>
                </div>
            </div> 
          <% } %>

          <h2>Send Emails</h2>
          <p>Fill in this form to send the email .. </p> 
          <hr/>
          <form method="POST">      
            <div class="form-group">
              <label for="from"> From : <sup>*</sup> </label>
              <input type="email" name="from" class="form-control form-control-lg" placeholder=" email of sender ... " required />
            </div>
            <div class="form-group">
                <label for="password">Password : <sup>*</sup> </label>
                <input type="password" name="password" class="form-control form-control-lg" placeholder=" password of the email sender ... " required />
            </div>
            <div class="form-group">
              <label for="to">To : <sup>*</sup> </label>
              <input type="email" name="to" class="form-control form-control-lg" placeholder=" email of receiver ... " required /> 
            </div>

            <div class="form-group">
              <label for="subject"> Subject : <sup>*</sup> </label>
              <input type="text" name="subject" class="form-control form-control-lg" placeholder=" subject of the mail ... " required /> 
            </div>

            <div class="form-group">
               <label for="message"> Message : <sup>*</sup> </label>
               <textarea class="form-control" rows="3"></textarea>
            </div>

            <div class="form-row">
              <div class="col">
                <input type="submit" value="Send" class="btn btn-dark btn-block">
              </div>
              <div class="col">
                <input type="reset" value="Cancel" class="btn btn-secondary btn-block">
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>